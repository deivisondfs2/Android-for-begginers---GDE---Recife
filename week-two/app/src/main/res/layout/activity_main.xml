<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_vertical_margin"
    android:layout_marginRight="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="br.com.deivisondfs2.appinicial.MainActivity">

    <!-- TextView quantity -->
    <TextView
        android:id="@+id/qtd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:text="@string/text_quantity"
        android:textAllCaps="true"
        android:textColor="#CCCCCC"
        android:textSize="18sp" />


    <!-- LinearLayout for facility align fields orientation horizontal-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_decrement"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="buttonDecrement"
            android:text="-" />


        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="0"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button_increment"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="buttonIncrement"
            android:text="+" />


    </LinearLayout>

    <!-- label value one product -->
    <TextView
        android:id="@+id/unitaryLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="@string/label_unitary"
        android:textColor="#000000"
        android:textSize="16sp" />

    <!-- field value one product  -->
    <TextView
        android:id="@+id/unitaryValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:fontFamily="monospace"
        android:text=""
        android:textColor="#000000"
        android:textSize="16sp" />

    <!-- field final result -->
    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text=""
        android:textColor="#000000"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="submitOrder"
        android:text="@string/button_result" />
</LinearLayout>
